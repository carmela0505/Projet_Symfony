{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block body %}
<div class = bg>
  <br><br>  <h1>{% trans %}Liste des Pays{% endtrans %}</h1>  <br>
<a href="{{ path('app_pays_new') }}"><button class="btn btn-outline-success">{% trans %}Ajouter un nouveau pays{% endtrans %}</button></a>   <br>
    <div class="table-wrapper">  <br>
    <table class="fl-table">
        <thead>
            <tr>
                <th>{% trans %}ID{% endtrans %}</th>
                <th>{% trans %}Nom de Pays{% endtrans %}</th>
                <th>{% trans %}Continent{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.idPays }}</td>
                <td>{{ pay.nomPays }}</td>
                <td>{{ pay.getnomContinent }}</td>
                <td>
                    <a href="{{ path('app_pays_show', {'idPays': pay.idPays}) }}"><i class="fa-solid fa-magnifying-glass fa-fade fa-lg" style="color: #370028;"></i></a>
                    <a href="{{ path('app_pays_edit', {'idPays': pay.idPays}) }}"><i class="fa-solid fa-pen-to-square fa-lg" style="color:#9e0e40;"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{% trans %}No records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>   <br>
  </div>  
{% endblock %}
