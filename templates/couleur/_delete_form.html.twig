<form method="post" action="{{ path('app_couleur_delete', {'idCouleur': couleur.idCouleur}) }}" onsubmit="return confirm('{% trans %} Souhaitez-vous supprimer cette couleur?{% endtrans %}'); ">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ couleur.idCouleur) }}">
    <button class="btn btn-danger">{% trans %}Supprimer{% endtrans %}</button>   <br>
</form>
