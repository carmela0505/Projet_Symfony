{% extends 'base.html.twig' %}

{% block title %}Ticket index
{% endblock %}

{% block body %}
	<div class = bg>
	<br><h1>{% trans %}Tickets{% endtrans %}</h1>
	<br>
	<a href="{{ path('app_ticket_new') }}">
		<button class="btn btn-outline-success">{% trans %}Ajouter un nouveau Ticket{% endtrans %}</button>
	</a>
	<div class="table-wrapper">
		<table class="fl-table">
			<br>
			<thead>
				<tr>
					<th>{% trans %}Annee{% endtrans %}</th>
					<th>{% trans %}Numero de Ticket{% endtrans %}</th>
					<th>{% trans %}Date de Vente{% endtrans %}</th>
					<th>{% trans %}Actions{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for ticket in tickets %}
					<tr>
						<td>{{ ticket.annee }}</td>
						<td>{{ ticket.numeroTicket }}</td>
						<td>{{ ticket.dateVente ? ticket.dateVente|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_ticket_show', {'annee': ticket.annee}) }}">
								<i class="fa-solid fa-magnifying-glass fa-fade" style="color: #370028;"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}
